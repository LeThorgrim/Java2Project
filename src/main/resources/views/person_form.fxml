<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
       xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PersonController">
    
    <Label text="Ajouter une personne" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
    <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="lastnameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="firstnameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Surnom:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="nicknameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Adresse:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Date de naissance:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="birthDateField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
</GridPane>

    
    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAddPerson"/>
        <Button text="Annuler" onAction="#handleCancel"/>
         <Button text="Afficher les personnes" onAction="#handleShowPeople"/>
    </HBox>
    
    <Label fx:id="messageLabel" text="" style="-fx-text-fill: red;"/>
</VBox>
